<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tetris4Dummies.Presentation.Views.MainPage"
             BackgroundColor="Black">

    <Grid Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Left side: Game board -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label Grid.Row="0" 
                   Text="TETRIS" 
                   FontSize="36" 
                   FontAttributes="Bold"
                   TextColor="#00F0F0"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <!-- Game Canvas -->
            <Border Grid.Row="1" 
                    StrokeThickness="3"
                    Stroke="#404040"
                    BackgroundColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <GraphicsView x:Name="GameCanvas"
                              WidthRequest="300"
                              HeightRequest="600"
                              HorizontalOptions="Center"
                              VerticalOptions="Center" />
            </Border>

            <!-- Movement Controls -->
            <Grid Grid.Row="2" ColumnSpacing="10" Margin="0,15,0,0" HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="◄"
                        Clicked="OnLeftClicked"
                        BackgroundColor="#333333"
                        TextColor="White"
                        FontSize="24"
                        HeightRequest="60"
                        CornerRadius="8" />

                <Button Grid.Column="1"
                        Text="▼"
                        Clicked="OnDropClicked"
                        BackgroundColor="#333333"
                        TextColor="White"
                        FontSize="24"
                        HeightRequest="60"
                        CornerRadius="8" />

                <Button Grid.Column="2"
                        Text="►"
                        Clicked="OnRightClicked"
                        BackgroundColor="#333333"
                        TextColor="White"
                        FontSize="24"
                        HeightRequest="60"
                        CornerRadius="8" />
            </Grid>
        </Grid>

        <!-- Right side: Info panel -->
        <VerticalStackLayout Grid.Column="1" Spacing="20" Margin="20,40,10,0" WidthRequest="140">
            
            <!-- Next Piece Preview -->
            <Border StrokeThickness="2"
                    Stroke="#404040"
                    BackgroundColor="#1a1a1a"
                    Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="NEXT" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#00F0F0"
                           HorizontalOptions="Center" />
                    <GraphicsView x:Name="NextPieceCanvas"
                                  WidthRequest="60"
                                  HeightRequest="60"
                                  HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Stats Panel -->
            <Border StrokeThickness="2"
                    Stroke="#404040"
                    BackgroundColor="#1a1a1a"
                    Padding="15">
                <VerticalStackLayout Spacing="15">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="SCORE" 
                               FontSize="12"
                               TextColor="#888888"
                               HorizontalOptions="Center" />
                        <Label x:Name="ScoreLabel" 
                               Text="0" 
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="2">
                        <Label Text="LEVEL" 
                               FontSize="12"
                               TextColor="#888888"
                               HorizontalOptions="Center" />
                        <Label x:Name="LevelLabel" 
                               Text="1" 
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#00F0F0"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="2">
                        <Label Text="LINES" 
                               FontSize="12"
                               TextColor="#888888"
                               HorizontalOptions="Center" />
                        <Label x:Name="LinesLabel" 
                               Text="0" 
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#F0A000"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- New Game Button -->
            <Button x:Name="NewGameBtn"
                    Text="NEW GAME"
                    Clicked="OnNewGameClicked"
                    BackgroundColor="#A000F0"
                    TextColor="White"
                    FontSize="14"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="8" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
